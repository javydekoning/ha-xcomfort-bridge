{
  "name": "HA Xcomfort bridge integration development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/ha-xcomfort-bridge",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/ha-xcomfort-bridge,type=bind",
  "mounts": [
    "source=${localWorkspaceFolder}/../xcomfort-python,target=/workspaces/xcomfort-python,type=bind,consistency=cached"
  ],
  "postCreateCommand": "pip install -e /workspaces/xcomfort-python",
  "forwardPorts": [
    8123
  ],
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "github.vscode-pull-request-github",
        "ryanluker.vscode-coverage-gutters",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ],
      "settings": {
        "files.eol": "\n",
        "files.associations": {
          "*.yaml": "home-assistant"
        },
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "bash",
        "[python]": {
          "editor.formatOnType": true,
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "python.analysis.autoSearchPaths": false,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "ruff.enable": true,
        "ruff.fixAll": true,
        "ruff.lint.enable": true,
        "ruff.lineLength": 120
      }
    }
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": [
        "ffmpeg",
        "libturbojpeg0",
        "libpcap-dev"
      ]
    }
  }
}